---
import "@/styles/global.css";
import "@fontsource-variable/montserrat";
import { getI18N } from "@/a18n/index.ts";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { currentLocale } = Astro;
const t = getI18N({ currentLocale: currentLocale ?? "es" });
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-896V9YZVME"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-896V9YZVME');
    </script>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="google-site-verification" content="bcIGNgcRlmTeFWASR-elUipgGBy9_WO9lzsvy-Vbq4A" />
    <title>{t.GLOBAL.TITLE} | {title}</title>
    <ClientRouter />
  </head>
  <body class="flex flex-col min-h-screen text-white bg-black font-medium">
    <slot />
  </body>
</html>
